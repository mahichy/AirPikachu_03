<div class="row">
	<div class="col-md-3">
		<%= render 'room_menu' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				Description
			</div>

			<div class="panel-body">
				<div class="container">
					<%= form for @room do |f| %>

							<div class="row">
								<div class="form-group">
									<label>Listing Name</label>
									<%= f.text_field :listing_name, placeholder: "What Is Your Listing Name?", class: "form-control" %>
								</div>
							</div>

							<div class="row">
								<div class="form-group">
									<label>Summary</label>
									<%= f.text_area :summery, row:5, placeholder: "Summary Of Yur House", class: "form-control" %>
								</div>
							</div>

							<div class="text-center">
								<%= f.submit "Save", class: "btn btn-form" %>
							</div>

					<% end -%>

					

				</div>
			</div>

		</div>
	</div>
</div>

